{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container">
        <h2 class="text-center">
            Bienvenido
            {% if app.user.role == 'ROLE_ADMIN' %}
                Administrador
            {% elseif app.user.role == 'ROLE_USER' %}
                Usuario
            {% endif %}
            :
            {{ app.user.username }}
        </h2>
	</div>
{% endblock %}